#include <bits/stdc++.h>
using namespace std;
int n, k;
bool kt ;
map<int,int>a;
map<int,int>d;
int res = 0;
int main()
{
    ios_base::sync_with_stdio(0);
	cin.tie(0); cout.tie(0);
	//freopen( ,"r",stdin);
	//freopen( ,"w",stdout);
    cin >> n >> k;
    for (int i = 1; i <= n; i++)
    cin >> a[i];
    kt = false;
	for (int i = 1; i <= n; i++)
	{
		for (int j = i + 1; j <= n; i++)
		{
			 res = a[i] + a[j];
			if (res == 2 * k)
			kt = true;
			break;
		}
	 } 
	 if(kt){
	 	d[res]++;
	 	cout << d[res];
	 }
	 else cout << 0;
    return 0;
}
